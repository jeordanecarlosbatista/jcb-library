{
  "name": "@jcb/logger",
  "version": "1.0.0",
  "description": "JCB Logger",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "lint:fix": "lint --fix",
    "lint": "eslint \"{lib,test}/**/*.ts\"",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.5.1"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "lib/**/*.{ts,js}"
    ],
    "coveragePathIgnorePatterns": [],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/lib/$1",
      "^@/test/(.*)$": "<rootDir>/test/$1"
    },
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "testEnvironment": "node"
  },
  "dependencies": {
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": "20.17.0"
  }
}
